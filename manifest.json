{
  "manifest_version": 3,
  "name": "Smart Page Summary",
  "version": "1.0.0",
  "description": "Summarizes any webpage using a built-in AI API.",
  "permissions": ["activeTab", "scripting", "storage", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smart Page Summary"
  },
  "background": {
    "service_worker": "background.js"
  }
}
